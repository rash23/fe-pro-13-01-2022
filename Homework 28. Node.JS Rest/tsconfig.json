{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2015",
    "lib": ["es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "types": [
      "node"
    ],
  },
  "watchOptions": {
    "excludeDirectories": ["node_modules", "dist"]
  },
  "ts-node": {
    "files": true,
  },
	"include": ["./src"],
  "exclude": ["node_modules", "dist"],
}
